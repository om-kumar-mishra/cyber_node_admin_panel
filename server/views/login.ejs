<!DOCTYPE html>
<html lang="en">

<meta http-equiv="content-type" content="text/html;charset=UTF-8" />

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>
		<%= title %>
	</title>

	<link rel="stylesheet"
		href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&amp;display=fallback">

	<link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">

	<link rel="stylesheet" href="plugins/icheck-bootstrap/icheck-bootstrap.min.css">

	<link rel="stylesheet" href="css/adminlte.min2167.css?v=3.2.0">
</head>

<body class="hold-transition login-page">
	<div class="login-box">
		<div class="login-logo">
			<h4>Cyber Security Admin </h4>
			<!-- <img src="images/logo.png"> -->

		</div>

		<div class="card">
			<div class="card-body login-card-body rounded  p-5 bg-info"
			 style=" height: 300px; box-shadow: 5px 5px 5px 5px; border-radius: 15px;">
				<p class="login-box-msg">Sign in to start your session</p>
				<% if (typeof successMessage !='undefined' && successMessage) { %>
					<p class="alert alert-success">
						<%- successMessage %>
					</p>
					<% } else if(typeof errorMessage !='undefined' && errorMessage) { %>
						<p class="alert alert-danger m-5">
							<%- errorMessage %>
						</p>
						<% } %>
							<form action="/login" method="post" >
								<div class="input-group mb-3">
									<input type="text" name="username" class="form-control" placeholder="Username"
										value="">
									<div class="input-group-append">
										<div class="input-group-text">
											<span style="color: blue;" class="fas fa-user"></span>
										</div>
									</div>
								</div>
								<div class="input-group mb-3">
									<input type="password" name="password" id="myInput" class="form-control"
										placeholder="Password" value="">
									<div class="input-group-append">
										<div id="input-group-text" class="input-group-text">
											<i id="eye" onclick="myFunction()" style="color: blue;"  class='fas fa-eye-slash'></i>
											<!-- <span  class="fas fa-lock"></span> -->
										</div>
									</div>
								</div>
								<div class="row">


									<div class="col-4">
										<button type="submit" class="btn btn-warning btn-block">Sign In</button>
									</div>

								</div>
							</form>



			</div>

		</div>
	</div>


	<script src="plugins/jquery/jquery.min.js"></script>

	<script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

	<script src="dist/js/adminlte.min2167.js?v=3.2.0"></script>
	<script>
		function myFunction() {
			var x = document.getElementById("myInput");
			var addElemenet = document.getElementById("eye");
			
			if (x.type === "password") {
				x.type = "text";
				addElemenet.className='fas fa-eye'
				addElemenet.style.color="red"
				

			} else {
				x.type = "password";
			
				addElemenet.className='fas fa-eye-slash'
				addElemenet.style.color="blue"
				
			}
		}
	</script>
</body>


</html>