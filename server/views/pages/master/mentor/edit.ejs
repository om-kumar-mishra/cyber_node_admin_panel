<%- include('../../../partials/header'); %>
    <%- include('../../../partials/sidebar'); %>
        <div class="content-wrapper">

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Mentors</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Mentors</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <a href="/mentors-list" class="btn btn-primary">Back</a>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <%- include('../../../partials/error'); %>
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-md-12">

                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Edit Mentor</h3>
                                    </div>

                                    <form id="courseform" action="/mentor-update" method="POST"
                                        enctype="multipart/form-data">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="form-group col">
                                                    <label for="name">Mentor Name</label>
                                                    <input type="text" name="name" class="form-control" id="name"
                                                        placeholder="Enter Mentor Name"
                                                        value="<%= item.name %>">
                                                    <input type="hidden" name="id" value="<%= item.id %>">
                                                </div>
                                                <div class="form-group col">
                                                    <label for="color-code">Title</label>
                                                    <input type="text" class="form-control" name="title" value='<%= item.title %>'>

                                                </div>
                                            </div>
                                            

                                            <div class="form-group">
                                                <% if(item.image) {%>
                                                    <label for="uploadvideo">Uploaded Image</label>
                                                    <div class="input-group">
                                                        <img src="<%= item.image %>" alt="<%= item.name %>" class="" style="width: 200px;">
                                                    </div>
                                                    <%}%>

                                                        <label for="video">Upload Image</label>
                                                        <input type="file" name="mentorimg" class="form-control" id="image"
                                                accept="image/png, image/jpeg">
                                                        <input type="hidden" name="oldimg" value="<%= item.image %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="description">Description</label>
                                                <textarea class="form-control" id="description" name="description"
                                                    rows="4" cols="50"><%= item.description %></textarea>
                                            </div>

                                        </div>

                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </form>
                                </div>

                            </div>


                            <div class="col-md-6">
                            </div>

                        </div>

                    </div>
                </section>

        </div>
        <%- include('../../../partials/footer'); %>
            