                                               <img style="max-height: 50px; min-height: 50px;" src="/uploaded-files/<%=element.image%>">
                                            </td>

                                            <td>
                                                <a href="/delete-comman-banner?bannerId=<%= element.id %>" ><i class="fa fa-trash-o" style="font-size:25px; color:red" title="delete"></i></a>
                
                                                <a href="/update-comman-banner?bannerId=<%= element.id %>" ><i class='fas fa-pen-nib' style="font-size:25px;" title="Edit" ></i></a>
                                             </td>
                                            
                                           
                                        </tr>
                                        <%  })  } %>
