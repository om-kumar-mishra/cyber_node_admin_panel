            <%- include("../../notify"); %>

                <section class="content">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-md-12">

                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Update Why We</h3>
                                        <a href="/why-we-list" class="btn btn-light btn-sm"
                                            style="float: right; color: #000;">Back</a>
                                    </div>

                                    <form id="bannerForm" action="/update-why-we-store" method="POST"
                                        enctype="multipart/form-data">
                                        <input type="hidden" value="<%= data.id %>" name="whyWeId">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Title: <span class="text-danger">*</span></label>

                                                        <input type="text" value="<%= data.title %> " name="title"
                                                            class="form-control" id="exampleInputEmail1"
                                                            placeholder="Enter 'Why we' title" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Image</label>

                                                        <input type="file" name="image" class="form-control" onchange="return validate_fileupload(this)"
                                                            id="exampleInputEmail1" placeholder="Enter  title">

                                                        <input type="hidden" value="<%= data.image %>" name="oldImage">

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div>
                                                        <img style="max-height: 100px; min-height: 100px; margin-top: 2px;"
                                                            src="/uploaded-files/<%= data.image %>">
                                                    </div>
                                                </div>
                                            </div>






                                            <label for="exampleInputPassword1">Description</label>
                                            <div class="form-group ">

                                                <textarea name="description" id="description" class="form-control"
                                                    id="details" cols="20" rows="3"
                                                    required><%- data.description %></textarea>
                                            </div>



                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                    </form>
                                </div>

                            </div>


                            <div class="col-md-6">
                            </div>

                        </div>

                    </div>
                </section>

        </div>

